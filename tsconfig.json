{
    "extends": "@tsconfig/node22",
    "compilerOptions": {
        "strict": false,
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
            "~test/*": ["test/*"],
            "~resources/*": ["resources/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "include": ["./src/**/*", "./test/**/*", "./test-generated/**/*", "./resources/**/*", "./*.ts"]
}
