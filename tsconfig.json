{
    "extends": "@tsconfig/node18",
    "compilerOptions": {
        "strict": false,
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es6",
        "lib": ["es6", "es2017"],
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
            "~test/*": ["test/*"],
            "~resources/*": ["resources/*"]
        },
        "verbatimModuleSyntax": false
    },
    "include": ["./src/**/*", "./test/**/*", "./test-generated/**/*", "./resources/**/*", "./*.ts"]
}
