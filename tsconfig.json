{
    "extends": "./node_modules/@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "strict": false,
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
            "~test/*": ["test/*"],
            "~resources/*": ["resources/*"]
        }
    },
    "include": ["./src/**/*", "./test/**/*", "./test-generated/**/*", "./resources/**/*", "./*.ts"]
}
